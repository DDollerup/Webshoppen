@model Product
@{
    ViewBag.Title = "Create Product";
}
<section>
    <h2>Create Product</h2>
    <form action="/Admin/Admin/CreateProductSubmit" method="post" enctype="multipart/form-data">
        <table>
            <tr>
                <td>
                    <label for="Name">Name</label>
                </td>
                <td>
                    <input type="text" name="Name" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Description">Description</label>
                </td>
                <td>
                    <textarea name="Description"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="ImageFile">Image</label>
                </td>
                <td>
                    <input type="file" name="ImageFile" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Price">Price</label>
                </td>
                <td>
                    <input type="number" step="0.01" name="Price" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="OnSale">On Sale</label>
                </td>
                <td>
                    Yes<input type="radio" value="true" name="OnSale" />
                    No<input type="radio" value="false" name="OnSale" checked="checked" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="SalePrice">Sale Price</label>
                </td>
                <td>
                    <input type="number" step="0.01" name="SalePrice" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CategoryID">Category</label>
                </td>
                <td>
                    <select name="CategoryID">
                        <option value="0">
                            Select Category
                        </option>
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.ID">@category.Name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Create" />
                </td>
            </tr>
        </table>
    </form>
</section>